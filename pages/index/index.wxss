page {
  background: #ecf0f3;
}

.header {
  margin: 10rpx 50rpx;
  border-radius: 10px;
  padding: 20rpx;
  background: #ecf0f3;
  box-shadow: 20rpx 20rpx 60rpx #c9cccf,
    -20rpx -20rpx 60rpx #ffffff;
}

.title {
  font-size: 50rpx;
  text-align: center;
  font-weight: bold;
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  background-image: linear-gradient(60deg, #29323c 0%, #485563 100%);
}

.button {
  margin-top: 10rpx;
}

.user {
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}

.photo {

  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  position: relative;
  border: 2px solid transparent;
  background-origin: border-box;
  /*从边框开始背景图*/
  background-clip: padding-box, border-box;
  /*设置第一个背景和第二个背景的范围*/
  background-size: cover;
  /*由于背景图像不能设置纯色，所以可以使用下面的方式设置纯色*/
  background-image: linear-gradient(#fff, #fff), linear-gradient(to right, #4facfe 0%, #00f2fe 100%);
  margin: 20rpx 0rpx;
}

.name {
  background-image: linear-gradient(to right, #00dbde 0%, #fc00ff 100%);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  font-family: "苹方";
}

span {
  background-image: linear-gradient(-225deg, #231557 0%, #44107A 29%, #FF1361 67%, #FFF800 100%);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  font-family: "苹方";
}

.main {
  margin-left: 20rpx;
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  font-family: "苹方";
  background-color: #DCD9D4;
  background-image: linear-gradient(150deg, #576969 0%, #f51212 100%);
}

.mainn {
  text-align: center;
  margin: 20rpx 0rpx;
}

.th {
  font-family: "苹方";
  color: black;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background-image: linear-gradient(to top, #dfe9f3 0%, white 100%);
}

.tr {
  display: flex;
  justify-content: space-around;
  flex-direction: row;
  font-family: "苹方";
  border-bottom: 1rpx solid rgb(230, 230, 230);
}

.tr:nth-child(1){
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  background-image: linear-gradient(to right, #fa709a 0%, #fee140 100%);
}
.tr:nth-child(2){
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  background-image: linear-gradient(to right, #4facfe 0%, #00f2fe 100%);
}
.tr:nth-child(3){
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  background-image: linear-gradient(to right, #f83600 0%, #f9d423 100%);
}
.td {
  
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.Rank {
  border: 2px solid transparent;
  background-origin: border-box;
  /*从边框开始背景图*/
  background-clip: padding-box, border-box;
  /*设置第一个背景和第二个背景的范围*/
  background-size: cover;
  /*由于背景图像不能设置纯色，所以可以使用下面的方式设置纯色*/
  background-image: linear-gradient(#ecf0f3, #ecf0f3), linear-gradient(to right, #4facfe 0%, #00f2fe 100%);
  overflow: hidden;
  margin: 0rpx 30rpx;
  border-radius: 5px;
}
.ranking{
  position: relative;
  text-align: center;
  font-size: 50rpx;
  font-weight: bold;
  color: #0098de;
  background: #ecf0f3;
  margin-left: 60rpx;
  top: 15rpx;
  width: 200rpx;
}