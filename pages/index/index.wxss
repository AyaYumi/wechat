.title{
  font-size: 80rpx;
  font-weight: bold;
  text-align: center;
}
span {
  background-image: linear-gradient(-225deg, #231557 0%, #44107A 29%, #FF1361 67%, #FFF800 100%);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  font-family: "微软雅黑";
}
.main{
  text-align: center;
  margin: 20rpx 0rpx;
}
.th{
  color: white;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background: rgb(124, 124, 124);
}
.tr{
  display: flex;
  justify-content: space-around;
  flex-direction: row;
}
.tr:nth-child(even){
  background: #ccc;
}
.td{
  text-align: center;
  overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
  width: 33%;
}