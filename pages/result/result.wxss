/* pages/result/result.wxss */
page{
    background: #ecf0f3;
}
.title{
    font-size: 50rpx;
    text-align: center;
    font-weight: bold;
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    background-image: linear-gradient(60deg, #29323c 0%, #485563 100%);
}
.header {
    margin: 10rpx 50rpx;
    border-radius: 10px;
    padding: 20rpx;
    background: #ecf0f3;
    box-shadow: 20rpx 20rpx 60rpx #c9cccf,
      -20rpx -20rpx 60rpx #ffffff;
  }
.h1{
    text-align: center;
    background-image: linear-gradient(-225deg, #231557 0%, #44107A 29%, #FF1361 67%, #FFF800 100%);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    font-family: "苹方";
}